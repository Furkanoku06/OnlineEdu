@model List<ResultCourseCategoryDTO>
@{
    ViewData["Title"] = "Kurs Kategori Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Gösterme Durumu</th>
        <th></th>
        <th>Ana Sayfada</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@(item.IsShown ? "Gösteriliyor":"Gösterilmiyor")</td>
            <td>

                <button onclick="deleteCourseCategory(@item.CourseCategoryId)" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryId" class="btn btn-outline-info">Güncelle</a>
            </td>
            <td>
                <a asp-action="ShowOnHome" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryId" class="btn btn-outline-success">Göster</a>
                <a asp-action="DontShowOnHome" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryId" class="btn btn-outline-dark">Gösterme</a>
            </td>
        </tr>
    }

</table>
<a asp-action="CreateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-info">Yeni Kurs Kategorisi Ekle</a>

<script>
    function deleteCourseCategory(id) { 
    Swal.fire({
        title: "Silmek İstediğinize Emin Misiniz?",
        text: "Bu işlemi geri alamazsınız!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
    }).then((result) => {
        window.location.href = "/Admin/CourseCategory/DeleteCourseCategory/" + id;
    });
    }
</script>